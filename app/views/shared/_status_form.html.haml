= form_for(@status, :remote => true) do |f|
  %ul.field.status
    %li= f.label "Busy"
    %li= f.radio_button :state, 1, :id => 'Busy', :onclick => "this.form.submit();"
    \ &nbsp;&nbsp;
    %li= f.label "Maybe"
    %li= f.radio_button :state, 2, :id => 'Maybe', :onclick => "this.form.submit();"
    \ &nbsp;&nbsp;
    %li= f.label "Open"
    %li= f.radio_button :state, 3, :id => 'Open', :onclick => "this.form.submit();"
  -#= f.submit
  %br
  %br
  %br
%ul.stars
  %li#busy{:class => "star"} &#10030;
  \
  %li#maybe{:class => "star"} ✮
  \
  %li#open{:class => "star"} ✮
  \
