<%= form_for(@status) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% # Need to determine how to display the correct text of 
       # Open, Busy or Maybe, given the integer value returned
       # from by the model.
    %>
    <%= f.label "Busy" %>
    <%= f.radio_button :state, 1 %><br />
    <%= f.label "Maybe" %>
    <%= f.radio_button :state, 2 %><br />
    <%= f.label "Open" %>
    <%= f.radio_button :state, 3 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
